<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="bd.com.universal.eparking.seeker.Fragments.AddVehicleFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutId"
        android:background="@drawable/all_side_border_main"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight=".7"
                android:background="#FFF"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="85dp">
                <ImageView
                    android:background="#FFF"
                    android:id="@+id/blueBookImageShowId"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/car_red"
                    android:layout_height="85dp" />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".3"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"
                    android:drawableTint="@color/white"
                    android:drawableLeft="@drawable/ic_attach_file_black_24dp"
                    android:id="@+id/uploadBlueBookId"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/all_side_border"
                    android:text="Upload Vehicle Image"
                    />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration Number"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteNumber"
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:layout_marginLeft="10dp"
                        android:hint="Dhaka Metro"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="HA 123452"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:id="@+id/registrationNumberId"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>



        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/radioGroupId"
            android:gravity="center">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carRadioButtonId"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Car"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textColor="#000"
                android:id="@+id/microbusTV"
                android:fontFamily="@font/roboto_regular"
                android:text="/Microbus"/>
            <RadioButton
                android:id="@+id/motorcycleRadioButtonId"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"
                android:text="Motorcycle"/>

        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/saveButtonId"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Save"
            android:textSize="20dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle List"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <android.support.v7.widget.CardView
            android:id="@+id/carCardViewId"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/all_side_border_main">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight=".7"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/carBlueBookId"
                    android:src="@drawable/car_red"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="DHAKA METRO LA-11-9999"
                        android:id="@+id/carNumberId"
                        android:textColor="@color/black"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bikeCardViewId"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/all_side_border_main"
           >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight=".7"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/motorcycleBlueBookId"
                android:src="@drawable/bike_red"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DHAKA METRO HA-12-42399"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/motorCycleNumberId"
                    android:textColor="@color/black"/>


            </LinearLayout>
        </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>
