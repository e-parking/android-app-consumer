<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ActivityFragment">



    <TextView
        android:id="@+id/mInfoText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="You have no current activity."/>




    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activityCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="3"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="9dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorPrimary"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/placeImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/garage_picture"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NameTV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="You parked at"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:text="Address goes here \nThis is second line"/>

                    <Button
                        android:id="@+id/mapButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_map_icon"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_telephone_icon"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/phoneNumberTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:gravity="left|center"
                        android:text="017xxxxxxxx"/>
                    <Button
                        android:id="@+id/callButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_call_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_timer_icon"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/durationTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:gravity="left|center"
                        android:text="00:00:00s"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="5"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="End Now"
                        android:textColor="@color/white"
                        android:background="@color/red"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>