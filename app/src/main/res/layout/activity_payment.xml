<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="bd.com.universal.eparking.seeker.Activities.PaymentActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight=".5"
    android:gravity="bottom"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight=".7"
            android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/duration_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight=".5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:text="00:00:00s"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_weight=".7"/>


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="740"
            android:id="@+id/ammount_id"
            android:fontFamily="@font/roboto_regular"
            android:textSize="25sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/all_side_border"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/provider_image_id"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@drawable/profile"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider Name"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:id="@+id/provider_name_id"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:id="@+id/address"
                android:layout_below="@+id/provider_name_id"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/vehicle_id"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vehicle_car"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>



    <LinearLayout
        android:layout_weight=".5"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight=".5"
                android:layout_marginTop="8dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight=".5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:text="Rate Parking"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight=".5"/>


        </LinearLayout>


        <RatingBar
            android:id="@+id/rating_bar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:numStars="5"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/comment_id"
            android:hint="Leave a Comment (Optional)"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/submit_button_id"
            android:text="Submit"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/all_side_border"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_height="50dp" />

    </LinearLayout>




</LinearLayout>
