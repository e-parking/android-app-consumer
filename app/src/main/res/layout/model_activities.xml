<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activityCardView"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_weight="3"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".64"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/parkPlaceImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:background="@drawable/image_border"
                    android:src="@drawable/ic_park_false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Sep 2018"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:id="@+id/requestDateId"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight=".36"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/NameTV"
                        android:layout_width="match_parent"
                        android:textSize="17dp"
                        android:layout_weight=".45"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:text="You parked at"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/durationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight=".55"
                        android:maxLines="2"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:text="0h:0m"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:singleLine="false"
                        android:maxLines="1"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:text="Address goes here \nThis is second line"/>

                    <Button
                        android:id="@+id/mapButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_map_icon"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/mobileIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_telephone_icon"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/phoneNumberTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="6"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:gravity="left|center"
                        android:text="017xxxxxxxx"/>
                    <Button
                        android:id="@+id/callButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_call_icon"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBarId"
                        android:numStars="5"
                        android:layout_gravity="center"
                        android:progressBackgroundTint="@color/white"
                        android:visibility="gone"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/endButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="End Now"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        />

                    <Button
                        android:id="@+id/cancleButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="10sp"
                        android:id="@+id/status_id"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:enabled="false"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:text="PENDING"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/all_side_border"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>